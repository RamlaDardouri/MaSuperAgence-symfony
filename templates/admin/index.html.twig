{% extends 'base.html.twig' %}


{% block title%} Gérer les biens {% endblock title %}

{% block body %}
<div class="container mt-4">
<h1> Gérer les biens </h1>

{% for message in app.flashes('success') %}
<div class="alert alert-success">
{{message}}
</div>
{% endfor %}

<table class="table table-striped">
<thead>
<tr>
<th>Titre</th>
<th>Action</th>
</tr>
</thead>
</tbody>
{% for proprety in properties %}
<tr>
<td> {{ proprety.title }}</td>
<td>
<a href="{{path('admin.proprety.edit', {id: proprety.id} )}}" class="btn btn-secondary">Editer </a>

<form method="post" action="{{path('admin.proprety.delete', {id: proprety.id} )}}" style="display: inline-block" 
onsubmit="return confirm('Êtes vous vraiment sûr?')">
<input type="hidden" name="_method" value="DELETE">

<button class="btn btn-danger">Supprimer </button>
</form>

</td>
</tr>

{% endfor %}
</tbody>
</table>
<div class='text-right'>
<a href="{{path('admin.proprety.new')}}" class="btn btn-primary">Créer un nouveau bien </a>



</div>
{% endblock body %}